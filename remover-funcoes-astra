// REMOVE ASTRA CONFIGURAÇÕES DO WORDPRESS
function ivon_remove_metaboxes() {
remove_meta_box('astra_settings_meta_box', 'post', 'side');
remove_meta_box('astra_settings_meta_box', 'post', 'normal');
remove_meta_box('astra_settings_meta_box', 'post', 'advanced');
}
add_action('admin_head', 'ivon_remove_metaboxes');

// REMOVE CORES NATIVAS DO ASTRA QUANDO USADADO COM ELEMENTOR
add_filter( 'astra_disable_global_colors_in_elementor', '__return_true' );
